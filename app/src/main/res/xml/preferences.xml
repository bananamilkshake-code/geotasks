<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_is_geolistening_enabled"
        android:summary="@string/pref_hint_geo_listening"
        android:title="@string/pref_title_geo_listening"/>

    <ListPreference
        android:defaultValue="Ask"
        android:entries="@array/crash_report_status"
        android:entryValues="@array/crash_report_status"
        android:key="@string/pref_crash_report_send_status"
        android:summary="@string/pref_crash_report_status_summary"
        android:title="@string/pref_crash_report_status_title"/>

    <EditTextPreference
        android:defaultValue="100.0"
        android:key="@string/pref_alarm_distance"
        android:summary="@string/pref_alarm_distance_summary"
        android:title="@string/pref_alarm_distance_title"
        android:numeric="decimal" />

    <EditTextPreference
        android:defaultValue="1.0"
        android:key="@string/pref_location_update_min_distance"
        android:summary="@string/pref_location_update_min_distance_summary"
        android:title="@string/pref_location_update_min_distance_title"
        android:numeric="decimal" />

    <EditTextPreference
        android:defaultValue="5"
        android:key="@string/pref_location_update_min_time"
        android:summary="@string/ref_location_update_min_time_summary"
        android:title="@string/pref_location_update_min_time_title"
        android:numeric="integer" />
</PreferenceScreen>
