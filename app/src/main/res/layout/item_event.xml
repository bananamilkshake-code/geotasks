<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:paddingBottom="20dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp">

    <TextView
        android:id="@+id/item_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/item_event_alarm"
        android:layout_toStartOf="@+id/item_event_alarm"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Event title"
        android:textColor="@color/primary_text"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/item_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/item_event_alarm"
        android:layout_below="@+id/item_event_title"
        android:layout_toStartOf="@+id/item_event_alarm"
        android:paddingEnd="0dp"
        android:paddingStart="16dp"
        android:text="This is event description. Write here some information about it."
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_event_title"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="16dp"
        android:text="May, 12"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/item_event_alarm"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/item_event_time"
        android:layout_below="@+id/item_event_title"
        android:contentDescription="@string/main_event_element_reminder_toggler_desc"
        android:src="@drawable/ic_alarm_on_black_48dp"
        android:tint="@color/primary_text"/>

</RelativeLayout>