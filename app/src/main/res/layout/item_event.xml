<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_element_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/event_element_alarm"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:text="Event title" />

    <TextView
        android:id="@+id/event_element_time"
        android:textColor="@android:color/secondary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_element_title"
        android:layout_alignEnd="@+id/event_element_title"
        android:text="12/03/2015 8:05" />

    <ImageView
        android:id="@+id/event_element_alarm"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_alarm_on_black_48dp"
        android:contentDescription="@string/event_element_reminder_toggler_desc"/>
    
</RelativeLayout>